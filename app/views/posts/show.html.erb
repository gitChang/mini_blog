<div class="container-fluid p-0 p-md-5">
  <div class="row g-0 justify-content-center">
    <div class="col-12 col-md-10 col-lg-8">

      <div class="d-flex justify-content-between align-items-center p-3 p-md-0 mb-4">
        <%= link_to posts_path, class: "btn btn-link text-decoration-none text-muted p-0" do %>
          <i class="bi bi-arrow-left"></i> ‚Üê BACK TO FEED
        <% end %>

        <%= link_to "EDIT POST", edit_post_path(@post), class: "btn btn-outline-dark btn-sm px-3 fw-bold" %>
      </div>

      <article class="bg-white p-3 p-md-0">
        <header class="mb-5">
          <h1 class="display-4 fw-bold text-uppercase mb-3">
            <%= @post.title %>
          </h1>

          <div class="d-flex align-items-center mb-3">
            <% if @post.published? %>
              <span class="badge bg-success">
                <i class="bi bi-check-circle"></i> Published <%= time_ago_in_words(@post.published_at) %> ago
              </span>
            <% else %>
              <span class="badge bg-warning text-dark">
                <i class="bi bi-clock"></i> Scheduled for <%= @post.published_at.strftime("%b %d, %I:%M %p") %>
              </span>
            <% end %>
          </div>
        </header>

        <section class="post-content">
          <div class="fs-5 lh-lg text-secondary">
            <%= simple_format(@post.content) %>
          </div>
        </section>

        <hr class="my-5">

        <div class="d-grid gap-2 d-md-flex justify-content-md-start pb-5">
          <%= button_to "DELETE POST", post_path(@post),
              method: :delete,
              data: { confirm: "Are you sure?" },
              class: "btn btn-link text-danger text-decoration-none p-0 text-start fw-bold" %>
        </div>
      </article>

    </div>
  </div>
</div>