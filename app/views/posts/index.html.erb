<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Blog Feed</h1>
    <%= link_to 'New Post', new_post_path, class: 'btn btn-primary' %>
  </div>

  <% if @posts.any? %>
    <div class="row">
      <% @posts.each do |post| %>
        <div class="card mb-3 shadow-sm">
          <div class="card-body">
            <h2 class="h5"><%= link_to post.title, post %></h2>

            <div class="mb-2">
              <% if post.published_at <= Time.current %>
                <span class="badge bg-success">Published</span>
                <small class="text-muted">
                  <%= time_ago_in_words(post.published_at) %> ago
                </small>
              <% else %>
                <span class="badge bg-warning text-dark">Scheduled</span>
                <small class="text-muted">
                  Releasing in <%= time_ago_in_words(post.published_at) %>
                </small>
              <% end %>
            </div>

            <p><%= truncate(post.content, length: 100) %></p>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info text-center">
      No posts are currently published.
    </div>
  <% end %>
</div>