<div class="container-fluid p-0 p-md-5">
  <div class="bg-dark text-white p-4 mb-4 mb-md-5 text-center">
    <h1 class="display-5 fw-bold text-uppercase">The Feed</h1>
    <p class="lead text-secondary">Latest stories and updates</p>
    <%= link_to "WRITE NEW POST", new_post_path, class: "btn btn-outline-light rounded-0 px-4 fw-bold mt-2" %>
  </div>

  <div class="container">
    <div class="row g-4">
      <% if @posts.any? %>
        <% @posts.each do |post| %>
          <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm rounded-0">
              <div class="card-body d-flex flex-column p-4">

                <div class="mb-2">
                  <small class="text-danger fw-bold text-uppercase">
                    <%= post.published_at.strftime("%b %d") %>
                  </small>
                </div>

                <h3 class="card-title h4 fw-bold text-uppercase mb-3">
                  <%= link_to post.title, post_path(post), class: "text-decoration-none text-dark" %>
                </h3>

                <p class="card-text text-secondary mb-4">
                  <%= truncate(post.content, length: 120) %>
                </p>

                <div class="mt-auto d-flex justify-content-between align-items-center">
                  <%= link_to "READ MORE â†’", post_path(post), class: "text-decoration-none fw-bold text-dark small" %>

                  <div class="btn-group">
                    <%= link_to "Edit", edit_post_path(post), class: "btn btn-sm btn-outline-secondary" %>
                  </div>
                </div>

              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="col-12 text-center py-5">
          <p class="text-muted">No posts found. Why not write one?</p>
          <%= link_to "Create your first post", new_post_path, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>