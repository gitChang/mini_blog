<div class="container-fluid p-0 p-md-5">
  <div class="row g-0 justify-content-center">

    <div class="col-12 col-md-8 col-lg-6">

      <div class="card border-0 border-md shadow-sm-md">
        <div class="card-body p-3 p-md-5">

          <div class="text-center mb-4 mt-2">
            <h2 class="fw-bold text-uppercase">Edit Post</h2>
            <p class="text-muted small text-uppercase">ID: #<%= @post.id %></p>
            <hr class="w-25 mx-auto">
          </div>

          <%= form_with(model: @post, local: true, data: { turbo: false }) do |f| %>

            <div class="form-floating mb-3">
              <%= f.text_field :title, class: "form-control", placeholder: "Title", required: true %>
              <%= f.label :title, "Title *" %>
            </div>

            <div class="form-floating mb-3">
              <%= f.datetime_local_field :published_at,
                  value: @post.published_at&.strftime('%Y-%m-%dT%H:%M'),
                  class: "form-control",
                  required: true %>
              <%= f.label :published_at, "Publish Date *" %>
            </div>

            <div class="form-floating mb-4">
              <%= f.text_area :content, class: "form-control", placeholder: "Content", style: "height: 300px", required: true %>
              <%= f.label :content, "Content *" %>
            </div>

            <div class="d-grid gap-2">
              <%= f.submit "UPDATE POST", class: "btn btn-dark btn-lg rounded-0 py-3 fw-bold" %>
            </div>
          <% end %>

          <div class="d-flex justify-content-between mt-3">
            <%= link_to "CANCEL", post_path(@post), class: "btn btn-link text-decoration-none text-muted p-0" %>

            <%= button_to "DELETE", post_path(@post),
                method: :delete,
                data: { confirm: "Permanently delete this post?" },
                class: "btn btn-link text-danger text-decoration-none p-0 fw-bold" %>
          </div>

        </div>
      </div>

    </div>
  </div>
</div>