<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">

      <%# --- ERROR ALERT BLOCK START --- %>
      <% if @post.errors.any? %>
        <div class="alert alert-danger rounded-0 m-0 border-0" role="alert">
          <h6 class="fw-bold text-uppercase"><%= pluralize(@post.errors.count, "error") %> prevented this post from saving:</h6>
          <ul class="mb-0">
            <% @post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%# --- ERROR ALERT BLOCK END --- %>

      <div class="card border-0 shadow-sm">
        <div class="card-body p-4 p-md-5">

          <div class="text-center mb-4">
            <h2 class="fw-bold">Create New Post</h2>
            <p class="text-muted">Fill in the details below to publish your blog.</p>
          </div>

          <%= form_with(model: @post, local: true, data: { turbo: false }) do |f| %>

            <div class="form-floating mb-3">
              <%= f.text_field :title,
                  class: "form-control",
                  id: "postTitle",
                  placeholder: "Enter title...",
                  required: true %>
              <%= f.label :title, "Post Title *" %>
            </div>

            <div class="form-floating mb-3">
              <%= f.datetime_local_field :published_at,
                  class: "form-control",
                  id: "postPublishedAt",
                  required: true %>
              <%= f.label :published_at, "Publish Date & Time *" %>
            </div>

            <div class="form-floating mb-4">
              <%= f.text_area :content,
                  class: "form-control",
                  id: "postContent",
                  placeholder: "Write something...",
                  style: "height: 200px",
                  required: true %>
              <%= f.label :content, "Content *" %>
            </div>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
              <%= link_to "Cancel", posts_path, class: "btn btn-light px-4 me-md-2" %>
              <%= f.submit "Create Post", class: "btn btn-primary px-5 shadow-sm" %>
            </div>

          <% end %>

        </div>
      </div>

    </div>
  </div>
</div>